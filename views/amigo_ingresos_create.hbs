<!DOCTYPE html>
<html lang="en">

{{> header}}

<body id="page-top">
  <!-- Navigation Bar-->
  {{> navigation}}


  <div id="wrapper">
    <!-- Sidebar -->
    {{> side}}

    <div id="content-wrapper">

      <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            Taxi Amigo
          </li>
          <li class="breadcrumb-item active">{{page_title}}</li>
        </ol>

        <!-- Page Content -->
        <div class="row">
          <div class="col-8">
            <h1>{{page_title}}</h1></div>
          <div class="col-4">
            <div class="alert alert-info" role="alert">
              Periodo Actual: <b>Semana{{current_week}}-{{current_year}}</b>
            </div>
          </div>
        </div>



        <hr>

      </div>
      <!-- /.container-fluid -->


      <div class="container">

        <div class="row">
          <div class="col">
            <div class="alert alert-success" role="alert">
              <h5>Cuotas</h5>
            </div>

            <div class="jumbotron jumbotron-fluid">
              <div class="container">

                <form method="GET" action="/amigo_ingresos_view">
                  <div class="form-group row">
                    <label for="unidad__cuotas" class="col-sm-2 col-form-label">Unidad</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="unidad__cuotas" required name="unidad" placeholder="Número de Unidad">
                    </div>
                  </div>

                  <div class="form-group row">
                    <label for="cantidad__cuotas" class="col-sm-2 col-form-label">Cantidad</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="cantidad__cuotas" required name="cantidad" placeholder="$">
                    </div>
                  </div>

                  <div class="form-group row">
                    <label for="periodo__cuotas" class="col-sm-2 col-form-label">Periodo</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="periodo__cuotas" required name="periodo" value="Semana{{current_week}}-{{current_year}}">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="usuario__cuotas" class="col-sm-2 col-form-label">Usuario</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="usuario__cuotas" required name="conductor" placeholder="Nombre del Conductor">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="comentarios__cuotas" class="col-sm-2 col-form-label">Comentarios</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="comentarios__cuotas" name="comentarios" placeholder="Comentarios (opcional)">
                    </div>
                  </div>

                  <input type="hidden" id="fecha__cuotas" name="fecha" value="3487"></input>
                  <input type="hidden" id="fecha__cuotas" name="usuario" value="Admin"></input>

                  <button type="submit" class="btn btn-primary" id="submit__cuotas">Agregar</button>
                </form>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="alert alert-warning" role="alert">
              <h5>Penalizaciones</h5>
            </div>


            <div class="jumbotron jumbotron-fluid">
              <div class="container">
                <form>
                  <div class="form-group row">
                    <label for="unidad__penalizaciones" class="col-sm-2 col-form-label">Unidad</label>
                    <div class="col-sm-10">
                      <input type="email" class="form-control" id="unidad__penalizaciones" placeholder="Número de Unidad">
                    </div>
                  </div>

                  <div class="form-group row">
                    <label for="motivo__penalizaciones" class="col-sm-2 col-form-label">Motivo</label>
                    <div class="col-sm-10">
                      <input type="email" class="form-control" id="motivo__penalizaciones" placeholder="Motivo de penalización">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="conductor__penalizaciones" class="col-sm-2 col-form-label">Conductor</label>
                    <div class="col-sm-10">
                      <input type="email" class="form-control" id="conductor__penalizaciones" placeholder="Nombre del Conductor">
                    </div>
                  </div>

                  <button type="submit" class="btn btn-primary" id="submit__penalizaciones">Agregar</button>
                </form>
              </div>
            </div>
          </div>
        </div>

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Logout Modal-->
    {{> logout}}

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin.min.js"></script>
    <script src="js/amigo_ingresos.js">
    </script>
    <script src="js/lib/moment.js"></script>


</body>

</html>
